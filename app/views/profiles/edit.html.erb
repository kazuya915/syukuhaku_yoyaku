<h2>profileのedit</h2>
<%= form_with model: @user do |f| %>
    <table>
      <tr>
        <th><%= f.label :image画像 %></th>
        <td><%= f.file_field :prof_image %></td>
      </tr>
      <tr>
        <th><%= f.label :name ,"名前" %></th>
        <td><%= f.text_field :user_name %></td>
      </tr>
      
      <tr>
        <th><%= f.label :user_introduction ,"自己紹介" %></th>
        <td><%= f.text_area :user_introduction %></td>
      </tr>
    </table>
  
    <div>
      <ul>
        <li><%= f.submit "編集を完了する" %></li>
        <li><%= link_to "キャンセルしてマイプロフィールページに戻る", :profile %></li>
      </ul>
    </div>
  <% end %>