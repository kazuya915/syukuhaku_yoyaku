
<h2 class = 'p-3'>予約済みルーム一覧</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">画像</th>
                <th scope="col">部屋名</th> 
                <th scope="col">紹介文</th> 
                <th scope="col">合計料金</th> 
                <th scope="col">チェックイン日時</th> 
                <th scope="col">チェックアウト日時</th> 
                <th scope="col">予約確定日時</th> 
            </tr>
        </thead>
        <tbody>
            <% @myreservations.each do |myreservation| %>
            <tr>
                <td scope="row">
                <% if myreservation.room.image.attached? %>
                <%= image_tag myreservation.room.image , size: "100x60"%>
                <% else %>
                <%= image_tag "default-image-room.png" , size: "100x60" %>
                <% end %></td>
                <td><%= link_to "#{myreservation.room.room_name}", room_path(myreservation.room_id) %></td>
                <td><%= myreservation.room.room_introduction %></td>
                <td><%= myreservation.total_price %></td>
                <td><%= myreservation.start_date.strftime("%Y/%m/%d") %></td>
                <td><%= myreservation.end_date.strftime("%Y/%m/%d") %></td>
                <td><%= myreservation.created_at.strftime("%Y/%m/%d %H:%M") %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    
